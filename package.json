{
	"name": "quark-store",
	"version": "0.0.5",
	"description": "A tiny (216 bytes) state manager for React, which allows you to work with react state as atoms",
	"main": "dist/index.js",
	"types": "dist/index.d.ts, dist/react/index.d.ts",
	"module": "dist/index.js",
	"type": "module",
	"scripts": {
		"build": "tsc"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ssssed/quark-store.git"
	},
	"files": [
		"dist"
	],
	"bugs": {
		"url": "https://github.com/ssssed/quark-store/issues"
	},
	"size-limit": [
		{
			"path": "dist/index.js",
			"limit": "10 kB"
		}
	],
	"sideEffects": false,
	"keywords": [
		"store",
		"react",
		"state",
		"state manager",
		"atom store",
		"library"
	],
	"engines": {
		"node": "^16.0.0 || ^18.0.0 || >=20.0.0",
		"react": "^18.0.0"
	},
	"author": "Igor Koneshov",
	"license": "MIT",
	"devDependencies": {
		"@size-limit/preset-small-lib": "^9.0.0",
		"@types/react": "^18.2.28",
		"react": "^18.2.0",
		"size-limit": "^9.0.0",
		"typescript": "^5.2.2"
	}
}